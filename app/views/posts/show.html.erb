<p>
<%= form_for([@post, Comment.new]) do |f| %>
<%= f.label :content %>
<%= f.text_area :text %>
<%= f.submit  %>
<% end %>
</p>

<ul>
  <% @post.comments.each do |comment| %>
  <li><%= comment.text %>
    <%= link_to "delete", [comment.post, comment], method: :delete %></li>
  <% end %>
</ul>


