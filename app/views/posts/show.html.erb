

<h1>Single post</h1>

<p><%= @post.title %></p>
<p><%= @post.text %></p>
<p><%= @post.url %></p>
<%= link_to "edit", edit_post_path(@post)%>
<%= link_to "home", root_path %>
<%= link_to "delete", post_path(@post), method: :delete %>

